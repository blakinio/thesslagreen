# Set default behavior to automatically normalize line endings
* text=auto

# Force all Python files to use LF
*.py text eol=lf

# Force all text files to use LF
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.toml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

# Windows specific files use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf