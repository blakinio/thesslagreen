{
  "domain": "thessla_green_modbus",
  "name": "ThesslaGreen Modbus",
  "codeowners": [
    "@blakinio"
  ],
  "config_flow": true,
  "dependencies": [],
  "documentation": "https://github.com/blakinio/thesslagreen",
  "homeassistant": ">=2025.1.0",
  "iot_class": "local_polling",
  "issue_tracker": "https://github.com/blakinio/thesslagreen/issues",
  "quality_scale": "silver",
  "requirements": [
    "pymodbus>=3.6.0"
  ],
  "files": [
    "options/bypass_modes.json",
    "options/days_of_week.json",
    "options/filter_types.json",
    "options/gwc_modes.json",
    "options/modbus_baud_rates.json",
    "options/modbus_parity.json",
    "options/modbus_ports.json",
    "options/modbus_stop_bits.json",
    "options/periods.json",
    "options/reset_types.json",
    "options/special_modes.json",
    "registers/thessla_green_registers_full.json",
    "services.yaml",
    "strings.json",
    "translations/en.json",
    "translations/pl.json"
  ],
  "version": "0.1.0",
  "integration_type": "hub",
  "after_dependencies": [
    "modbus"
  ],
  "loggers": [
    "custom_components.thessla_green_modbus"
  ],
  "dhcp": [
    {
      "hostname": "airpack*",
      "macaddress": "00:80:F4:*"
    }
  ],
  "zeroconf": [
    {
      "type": "_modbus._tcp.local.",
      "properties": {
        "model": "airpack*"
      }
    }
  ]
}
