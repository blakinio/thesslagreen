{
  "domain": "thessla_green_modbus",
  "name": "ThesslaGreen Modbus",
  "codeowners": [
    "@thesslagreen"
  ],
  "config_flow": true,
  "dependencies": [],
  "documentation": "https://github.com/thesslagreen/thessla-green-modbus-ha/blob/main/README_en.md",
  "homeassistant": ">=2025.7.0",
  "iot_class": "local_polling",
  "issue_tracker": "https://github.com/thesslagreen/thessla-green-modbus-ha/issues",
  "quality_scale": "silver",
  "files": [
    "registers/thessla_green_registers_full.json"
  ],
  "requirements": [
    "pydantic>=2.0",
    "pymodbus>=3.5.0,<4.0.0",
    "voluptuous>=0.13.1"
  ],
  "version": "2.1.1",
  "integration_type": "hub",
  "dhcp": [
    {
      "hostname": "airpack*",
      "macaddress": "00:80:F4:*"
    }
  ],
  "zeroconf": [
    {
      "type": "_modbus._tcp.local.",
      "properties": {
        "model": "airpack*"
      }
    }
  ]
}
